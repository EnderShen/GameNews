<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="399dp"
        android:layout_height="277dp">

        <TextView
            android:layout_width="59dp"
            android:layout_height="32dp"
            android:fontFamily="@font/adamina"
            android:text="Name: "
            app:autoSizeMaxTextSize="?attr/dialogCornerRadius"
            app:autoSizeMinTextSize="@dimen/cardview_compat_inset_shadow"
            app:layout_constraintBottom_toTopOf="@+id/ccComments"
            app:layout_constraintEnd_toStartOf="@+id/cctext_comments_title"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toEndOf="@+id/ccuploaded_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.439" />

        <TextView
            android:id="@+id/cctext_comments_title"
            android:layout_width="143dp"
            android:layout_height="29dp"
            android:text="what should"
            android:textSize="18sp"
            app:autoSizeMaxTextSize="?attr/dialogCornerRadius"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.782"
            app:layout_constraintStart_toEndOf="@+id/ccuploaded_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.19" />

        <ImageView
            android:id="@+id/ccuploaded_image"
            android:layout_width="124dp"
            android:layout_height="92dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.058"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.086" />

        <TextView
            android:id="@+id/ccComments"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:fontFamily="@font/abril_fatface"
            android:text="this is my comment"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ccuploaded_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>